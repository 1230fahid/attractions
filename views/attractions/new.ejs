<% layout('layouts/boilerplate')%>
    <form action="/attractions" method="POST">
        <div>
            <label for="name">Name</label>
            <input type="text" , id="name" , name="attraction[name]" required>
        </div>
        <div>
            <label for="region">Region</label>
            <input type="text" , id="region" , name="attraction[region]" required>
        </div>
        <div>
            <label for="country">Country</label>
            <input type="text" , id="country" , name="attraction[country]" required>
        </div>
        <div>
            <label for="description">Description</label>
            <input type="text" , id="description" , name="attraction[description]" required>
        </div>
        <div>
            <label for="image">Image</label>
            <input type="text" , id="image" , name="attraction[image]" required>
        </div>
        <button>Add Attraction</button>
    </form>
    <a href="/attractions">All Attractions</a>