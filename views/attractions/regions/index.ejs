<% layout('layouts/boilerplate')%>
    <h1>
        Attractions in region <%=regions[0].region%>
    </h1>
    <ul>
        <% for (let region of regions) {%>
            <div class="card" mb-3>
                <div class="row">
                    <div id="images" class="col-md-4">
                        <img class="img-fluid" alt="" src="<%=region.image%>">
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title">
                                <%=region.name%>
                            </h5>
                            <p class="card-text">
                                <%=region.description%>
                            </p>
                            <p class="card-text">
                                <small class="text-muted">
                                    <%=region.region%> - <%=region.country%>
                                </small>
                            </p>
                            <a href="/attractions/<%=region._id%>" class="btn btn-primary">View
                                <%=region.name%>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            <%}%>
    </ul>