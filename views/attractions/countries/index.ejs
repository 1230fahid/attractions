<% layout('layouts/boilerplate')%>
    <h1>
        <%=countries[0].country%> Attractions
    </h1>
    <ul>
        <% for (let country of countries) {%>
            <div class="card" mb-3>
                <div class="row">
                    <div id="images" class="col-md-4">
                        <img class="img-fluid" alt="" src="<%=country.image%>">
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title">
                                <%=country.name%>
                            </h5>
                            <p class="card-text">
                                <%=country.description%>
                            </p>
                            <p class="card-text">
                                <small class="text-muted">
                                    <%=country.region%> - <%=country.country%>
                                </small>
                            </p>
                            <a href="/attractions/<%=country._id%>" class="btn btn-primary">View
                                <%=country.name%>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            <%}%>
    </ul>